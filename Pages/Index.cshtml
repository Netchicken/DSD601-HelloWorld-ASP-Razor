@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="card" style=" margin-top: 20px">
    <div class="card-header">
        <h1>Hello World</h1>
       
        <p class="card-text">Programming is Fun</p>
    </div>
    <div class="card-body">
        <h3>Enter your Name and Age</h3>

        <form method="post">
            <div class="form-group">
                <div class="row">

                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" />

                    <label asp-for="Age"></label>
                    <input type="number" asp-for="Age" />

                  

                    @*<p class="card-text">Add stuff here</p>*@
                </div>

                <div class="row">
                    <input type="submit" value="Submit" asp-action="Index" />
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <h5>Result</h5>
       <div class="row">
        <p class="card-text" >@Model.Result</p>
        </div>
    </div>
</div>





